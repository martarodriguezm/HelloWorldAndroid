<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <Button android:id="@+id/hello_world_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/hello_world"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button android:id="@+id/happy_birthday_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/birthday_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hello_world_button"/>


    <Button android:id="@+id/lists_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/lists"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/happy_birthday_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>